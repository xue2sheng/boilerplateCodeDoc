{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Complex Json Schema example",
  "description": "version 0.0.1",
  "type": "object",
  "properties": {
    "test": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1,
      "default": 0
    },
    "id": {
      "type": "string"
    },
    "imp": {
      "description": "Impressions rock",
      "type": "array",
      "metatype": "std::vector<Impression>",
      "metainfo": "implemented",
      "bookmarkSource": "#impression",
      "items": {
        "title": "Impression",
        "bookmarkTarget": "impression",
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "banner": {
            "type": "object",
            "metainfo": "not implemented",
            "scope": "required for banner impressions"
          },
          "audio": {
            "type": "object",
            "metainfo": "not implemented",
            "scope": "required for audio impressions"
          },
          "video": {
            "type": "object",
            "metainfo": "not implemented",
            "scope": "required for video impressions"
          },
          "native": {
            "title" : "Native",
            "type": "object",
            "scope": "required for native impressions",
            "properties": {
              "request": {
                "type": "string"
              },
              "ver": {
                "type": "string",
                "default": "1.1"
              },
              "api": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              }
            },
            "required": [
              "request"
            ]
          },
          "pmp": {
            "title" : "PMP",
            "type": "object",
            "properties": {
              "private_auction": {
                "type": "integer",
                "minimum": 0,
                "maximum": 1,
                "default": 0
              },
              "deals": {
                "type": "array",
                "items": {
                  "title": "Deal",
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "bidfloor": {
                      "type": "number",
                      "minimum": 0.0,
                      "default": 0.0
                    },
                    "bidfloorcur": {
                      "type": "string",
                      "enum": [
                        "USD"
                      ]
                    },
                    "at": {
                      "type": "integer"
                    },
                    "wseat": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "wadomain": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "ext": {}
                  },
                  "required": [
                    "id"
                  ]
                }
              }
            }
          },
          "displaymanager": {
            "type": "string"
          },
          "displaymanagerver": {
            "type": "string"
          },
          "instl": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "default": 0
          },
          "tagid": {
            "type": "string"
          },
          "bidfloor": {
            "type": "number",
            "minimum": 0.0,
            "default": 0.0
          },
          "bidfloorcur": {
            "type": "string",
            "enum": [
              "USD"
            ]
          },
          "clickbrowser": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "default": 0
          },
          "secure": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1,
            "default": 0
          },
          "iframabuster": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "exp": {
            "type": "integer"
          },
          "ext": {
            "title": "Extension",
            "type": "object",
            "properties": {
              "strictbannersize": {
                "type": "integer",
                "minimum": 0,
                "maximum": 1,
                "default": 0
              }
            }
          }
        },
        "oneOf": [
          {
            "required": [
              "id",
              "native"
            ]
          },
          {
            "required": [
              "id",
              "banner"
            ]
          },
          {
            "required": [
              "id",
              "video"
            ]
          },
          {
            "required": [
              "id",
              "audio"
            ]
          }
        ]
      }
    }
  },
  "required": [
    "id",
    "imp"
  ]
}
